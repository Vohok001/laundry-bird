<h1>From Laundry to Leisure <br> Spend Your Free Time Doing What You Love</h1>

<div class="tgt-card">
  <!-- Customer Types -->
  <div class="tgt-customers col-md-6 ">
    <div class="accordion" id="customerAccordion">

      <!-- Families (expanded by default) -->
      <div class="accordion-item">
        <div class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#familyCollapse" aria-expanded="true" aria-controls="familyCollapse"
            data-image="<%= asset_path('family.jpg') %>">
            <div>
              <h4>PERFECT FOR</h4>
              <h3>Families</h3>
            </div>
          </button>
        </div>
        <div id="familyCollapse" class="accordion-collapse collapse show" data-bs-parent="#customerAccordion">
          <div class="accordion-body">
            Let us take care of the washing, so you can focus on the memories.
          </div>
        </div>
      </div>

      <!-- Businesses -->
      <div class="accordion-item">
        <div class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#businessCollapse" aria-expanded="false" aria-controls="businessCollapse"
            data-image="<%= asset_path('waiter.png') %>">
            <div>
              <h4>PERFECT FOR</h4>
              <h3>Businesses</h3>
            </div>
          </button>
        </div>
        <div id="businessCollapse" class="accordion-collapse collapse" data-bs-parent="#customerAccordion">
          <div class="accordion-body">
            Free up valuable hours. Focus on growth, not laundry.
          </div>
        </div>
      </div>

      <!-- Professionals -->
      <div class="accordion-item">
        <div class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#professionalCollapse" aria-expanded="false" aria-controls="professionalCollapse"
            data-image="<%= asset_path('professionals.png') %>">
            <div>
              <h4>PERFECT FOR</h4>
              <h3>Professionals</h3>
            </div>

          </button>
        </div>
        <div id="professionalCollapse" class="accordion-collapse collapse" data-bs-parent="#customerAccordion">
          <div class="accordion-body">
            Maximize your work and me-time. We’ll handle the laundry.
          </div>
        </div>
      </div>

      <!-- Individuals -->
      <div class="accordion-item">
        <div class="accordion-header">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#individualCollapse" aria-expanded="false" aria-controls="individualCollapse"
            data-image="<%= asset_path('individual.png') %>">
            <div>
              <h4>PERFECT FOR</h4>
              <h3>Individuals</h3>
            </div>
          </button>
        </div>
        <div id="individualCollapse" class="accordion-collapse collapse" data-bs-parent="#customerAccordion">
          <div class="accordion-body">
            Less laundry, more you time. We’ve got it covered.
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Image Section -->
  <div class="customer-img col-md-6 ">
    <img src="<%= asset_path('family.jpg') %>" alt="Family" id="customer-image">
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const buttons = document.querySelectorAll(".accordion-button"); // Get all accordion buttons
    const image = document.getElementById("customer-image"); // Get the image element

    // Loop through all buttons and add event listeners
    buttons.forEach(button => {
      button.addEventListener("click", function () {
        const newImageSrc = this.getAttribute("data-image"); // Get the image URL from data-image attribute
        image.src = newImageSrc; // Change the image src
      });
    });
  });
</script>
